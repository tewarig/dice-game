//program to take input of name of user and convert it into 1st letter capital and other letter lower case.
var name=prompt("enter your name");
var len=name.length;
var let= name.slice(0,1);
var big=let.toUpperCase();
var last=name.slice(1,len);
var small= last.toLowerCase();

alert("hello"+big+small);


//bmi calculator
function bmi(weight,height){
  height=height*height;
  bmi=weight/height;
  return bmi;

}
alert(bmi(89,60));

